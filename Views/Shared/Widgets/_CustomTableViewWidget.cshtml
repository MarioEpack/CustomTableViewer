@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc

@using MEDIOClinic.Models.Widgets.CustomTableWidget

@model CustomTableViewModel


@if (!String.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}
else
{
    <table>
        <thead>
            <tr>
                @foreach (var columnName in Model.ColumnNames)
                {
            <th>
                @columnName
            </th>
                }
            </tr>
        </thead>
        <tbody>
                @foreach (var customTableItem in Model.Items)
                {
            <tr>
                     @foreach (var columnValue in Model.ColumnNames)
                     {
            <td>
                          @customTableItem.GetValue(columnValue.Trim())
            </td>
                     }
            </tr>
                 }
        </tbody>
    </table>
   

}



